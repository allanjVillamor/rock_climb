<%- include("partials/header") %>
<div class="container">
	<h1>Edit Climb</h1>
	<form action="/climbs/<%= climb._id %>?_method=PUT" method="POST">
	  <div class="form-group">
		<label for="title">Title</label>
		<input type="text" class="form-control" name="title" value="<%= climb.title %>">
	  </div>
	  <div class="form-group">
		<label for="type">Type of Climb</label>
		<select class="form-control" id="type" name="type">
			<option disabled> -- Choose Below -- </option>
			<option <%= climb.type === 'bouldering' ? 'selected' : '' %>>Bouldering</option>
			<option <%= climb.type === 'lead' ? 'selected' : '' %>>Lead</option>
			<option <%= climb.type === 'free solo' ? 'selected' : '' %>>Free Solo</option>
		  </select>
	  </div>
	  <div class="form-group">
		<label for="description">Description</label>
		<input type="text" class="form-control" name="description" value="<%= climb.description %>">
	  </div>
	  <div class="form-group">
		<label for="climber">Climber</label>
		<input type="text" class="form-control" name="climber" value="<%= climb.climber %>">
	  </div>
	  <div class="form-group">
		<label for="date">Date of Climb</label>
		<input type="date" class="form-control" name="date" value="<%= climb.date.toISOString().split('T')[0] %>">
	  </div>
	  <div class="form-group">
		<label for="grade">Grade</label>
		<input type="text" class="form-control" name="grade" value="<%= climb.grade %>">
	  </div>
	  <div class="form-group">
		<label for="image">Link to Image</label>
		<input type="text" class="form-control" name="image" value="<%= climb.image %>">
	  </div>
	  <button type="submit" class="btn btn-primary">Submit</button>
	</form>
</div>



<%- include("partials/footer") %>